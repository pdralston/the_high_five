<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Profile">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="329dp"
        android:layout_height="450dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/guidelineR"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guidelineL"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".Profile">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="124dp"
            android:background="@drawable/roundedges"
            android:ems="10"
            android:fontFamily="@font/roboto_bold"
            android:hint="Name"
            android:inputType="text"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:textColor="#9c9c9c"
            android:textColorHint="#9c9c9c"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/dob"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundedges"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:cursorVisible="false"
            android:ems="10"
            android:fontFamily="@font/roboto_bold"
            android:hint="DOB"
            android:inputType="none"

            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:textColor="#9c9c9c"
            android:textColorHint="#9c9c9c"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundedges"
            android:ems="10"
            android:fontFamily="@font/roboto_bold"
            android:hint="Email"
            android:inputType="text"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:textColor="#9c9c9c"
            android:textColorHint="#9c9c9c"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dob"
            tools:ignore="HardcodedText" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/textGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <EditText
            android:id="@+id/height"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/roboto_bold"
            android:inputType="textPersonName"
            android:text="Height"
            android:textColor="#9c9c9c"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textGuideline" />

        <EditText
            android:id="@+id/weight"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="188dp"
            android:layout_marginLeft="188dp"
            android:ems="10"
            android:fontFamily="@font/roboto_bold"
            android:inputType="textPersonName"
            android:text="Weight"
            android:textColor="#9c9c9c"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textGuideline" />

        <EditText
            android:id="@+id/feet"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@drawable/roundedges"
            android:ems="10"
            android:fontFamily="@font/roboto_bold"
            android:hint="Feet"
            android:inputType="number"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:textColor="#9c9c9c"
            android:textColorHint="#9c9c9c"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/inches"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@drawable/roundedges"
            android:ems="10"
            android:fontFamily="@font/roboto_bold"
            android:hint="Inches"
            android:inputType="number"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:textColor="#9c9c9c"
            android:textColorHint="#9c9c9c"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.322"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/lbs"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:background="@drawable/roundedges"
            android:ems="10"
            android:fontFamily="@font/roboto_bold"
            android:hint="Lbs"
            android:inputType="number"
            android:paddingStart="15dp"
            android:paddingLeft="15dp"
            android:textColor="#9c9c9c"
            android:textColorHint="#9c9c9c"
            android:textSize="16sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.74"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height"
            tools:ignore="HardcodedText" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/resource_default"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toTopOf="@+id/name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
