<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Profile">

        <EditText
            android:id="@+id/exerciseName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="none"
            android:padding="0dp"
            android:saveEnabled="false"
            android:text="Exercise Name"
            android:textColor="@color/green_af"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/exerciseWeight"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:ems="10"
            android:gravity="center"
            android:hint="1+"
            android:inputType="none"
            android:padding="0dp"
            android:textColor="@color/green_af"
            android:textColorHint="@color/green_af"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exerciseName" />

        <EditText
            android:id="@+id/exerciseReps"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:ems="10"
            android:gravity="center"
            android:hint="1+"
            android:inputType="number"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:padding="0dp"
            android:textColor="@color/green_af"
            android:textColorHint="@color/green_af"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/exerciseWeight"
            app:layout_constraintTop_toTopOf="@+id/exerciseWeight" />

        <EditText
            android:id="@+id/exerciseSets"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:ems="10"
            android:gravity="center"
            android:hint="1+"
            android:inputType="none"
            android:padding="0dp"
            android:textColor="@color/green_af"
            android:textColorHint="@color/green_af"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/exerciseReps"
            app:layout_constraintTop_toTopOf="@+id/exerciseWeight"  />

        <ImageView
            android:id="@+id/exerciseImage"
            android:layout_width="114dp"
            android:layout_height="81dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/dumbbell_gradient_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FF6B6B6B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="35dp"
            android:layout_height="11dp"
            android:gravity="center"
            android:text="Weight"
            android:textColor="@color/white"
            android:textSize="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exerciseWeight" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="35dp"
            android:layout_height="11dp"
            android:gravity="center"
            android:text="Reps"
            android:textColor="@color/white"
            android:textSize="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/exerciseWeight" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="35dp"
            android:layout_height="11dp"
            android:gravity="center"
            android:text="Sets"
            android:textColor="@color/white"
            android:textSize="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/exerciseWeight" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="56dp"
            android:layout_height="38dp"
            android:background="@drawable/roundedges"
            android:bottomLeftRadius="50dp"
            android:bottomRightRadius="50dp"
            android:fontFamily="@font/roboto"
            android:padding="0dp"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:topLeftRadius="50dp"
            android:topRightRadius="50dp"
            app:backgroundTint="#50dc00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/exerciseImage"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/exerciseName"
            app:layout_constraintVertical_bias="0.488"
            tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>