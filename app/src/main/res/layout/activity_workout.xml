<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Profile">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.90" />

    <View
        android:id="@+id/topSpacer"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ScrollView
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="topSpacer"
        android:layout_below="@+id/topSpacer"
        app:layout_constraintEnd_toStartOf="@+id/guidelineR"
        app:layout_constraintStart_toStartOf="@+id/guidelineL">

        <LinearLayout
            android:id="@+id/linearInScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <?xml version="1.0" encoding="utf-8"?>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#FF6B6B6B"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <EditText
                    android:id="@+id/exerciseName"
                    android:saveEnabled="false"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:cursorVisible="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:padding="0dp"
                    android:text="Exercise Name"
                    android:textColor="@color/green_af"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/exerciseWeight"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="1+"
                    android:inputType="number"
                    android:padding="0dp"
                    android:textSize="14dp"
                    android:textColor="@color/green_af"
                    android:textColorHint="@color/green_af"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exerciseName" />

                <EditText
                    android:id="@+id/exerciseReps"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="1+"
                    android:inputType="number"
                    android:padding="0dp"
                    android:textColor="@color/green_af"
                    android:textColorHint="@color/green_af"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/exerciseWeight"
                    app:layout_constraintTop_toTopOf="@+id/exerciseWeight" />

                <EditText
                    android:id="@+id/exerciseSets"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="1+"
                    android:inputType="number"
                    android:padding="0dp"
                    android:textColor="@color/green_af"
                    android:textColorHint="@color/green_af"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/exerciseReps"
                    app:layout_constraintTop_toTopOf="@+id/exerciseWeight"  />

                <ImageView
                    android:id="@+id/exerciseImage"
                    android:layout_width="97dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="0dp"
                    android:adjustViewBounds="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/dumbbell_gradient_2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#FF6B6B6B"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="35dp"
                    android:layout_height="11dp"
                    android:gravity="center"
                    android:text="Weight"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exerciseWeight" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="35dp"
                    android:layout_height="11dp"
                    android:gravity="center"
                    android:text="Reps"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView4"
                    app:layout_constraintTop_toBottomOf="@+id/exerciseWeight" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="35dp"
                    android:layout_height="11dp"
                    android:gravity="center"
                    android:text="Sets"
                    android:textColor="@color/white"
                    android:textSize="8dp"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/exerciseWeight" />

                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="56dp"
                    android:layout_height="38dp"
                    android:background="@drawable/roundedges"
                    android:bottomLeftRadius="50dp"
                    android:bottomRightRadius="50dp"
                    android:fontFamily="@font/roboto"
                    android:padding="0dp"
                    android:text="Done"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:topLeftRadius="50dp"
                    android:topRightRadius="50dp"
                    app:backgroundTint="#50dc00"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.56"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/exerciseName"
                    tools:ignore="HardcodedText" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>